{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BTECH Frontend (Chrome)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/btech-frontend",
            "args": [
                "-d",
                "chrome"
            ]
        },
        {
            "name": "BTECH Backend (Node.js)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/btech-backend/server.js",
            "cwd": "${workspaceFolder}/btech-backend",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Frontend + Backend)",
            "configurations": [
                "BTECH Backend (Node.js)",
                "BTECH Frontend (Chrome)"
            ]
        }
    ]
}